{
  "compilerOptions": {
    // File layout (optional, if you plan to build with tsc later)
    // "rootDir": "./src",
    // "outDir": "./dist",

    // ✅ Modern ESM in Node
    "module": "nodenext",
    "target": "esnext",

    // ✅ Keep your written import paths exactly (so .ts works)
    "verbatimModuleSyntax": true,

    // ✅ Useful for debugging and library builds
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // ✅ Stricter type safety
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // ✅ Required for Node + TS
    "types": ["node"],
    "skipLibCheck": true,

    // ✅ Good defaults for React projects too
    "jsx": "react-jsx",
    "isolatedModules": true,
    "moduleDetection": "force",
    "noUncheckedSideEffectImports": true,
    "allowImportingTsExtensions":true,
    "noEmit":true
  }
}
